---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

const golfCompanion = (await Astro.glob('../components/websites/golf-companion.astro'))[0];
const lolDraft = (await Astro.glob('../components/websites/lol-draft.astro'))[0];
const donationEngine = (await Astro.glob('../components/websites/donation-engine.astro'))[0];
const crabGame = (await Astro.glob('../components/websites/crab-game.astro'))[0];
const g3tech = (await Astro.glob('../components/websites/g3tech.astro'))[0];
const ultimateCharades = (await Astro.glob('../components/websites/ultimate-charades.astro'))[0];
const responder = (await Astro.glob('../components/websites/responder.astro'))[0];
const quoter = (await Astro.glob('../components/websites/quoter.astro'))[0];
const poller = (await Astro.glob('../components/websites/poller.astro'))[0];
const craber = (await Astro.glob('../components/websites/craber.astro'))[0];
const ticker = (await Astro.glob('../components/websites/ticker.astro'))[0];
const websites = [golfCompanion, lolDraft, donationEngine, crabGame, g3tech, ultimateCharades, responder, quoter, poller, craber, ticker]
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: flex;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						websites.map((website) => (
							<li>
								<website.default />
							</li>
							<hr/>
							<br/>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
